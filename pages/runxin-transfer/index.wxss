.article {
  padding-bottom: 50rpx;
}

.financing-list {
  background-color: #fff;
  margin-bottom: 30rpx;
}

.distribute-line {
  display: flex;
  align-items: center;
  margin-left: 15px;
  padding-right: 15px;
  border-bottom: 1rpx solid #ebebeb;
}

.distribute-line:last-child {
  border: 0;
}

.distribute-line .head {
  font-size: 14px;
  color: #676767;
  line-height: 1.2;
}

.distribute-line .val-input {
  display: flex;
  align-items: center;
  flex: 1;
}

.distribute-line .val-input input {
  flex: 1;
  padding: 15px 0;
  font-size: 14px;
  color: #676767;
  line-height: 1.2;
  text-align: right;
}

.distribute-line.amount {
  display: block;
}

.distribute-line.amount input {
  font-size: 30px;
  text-align: left;
  margin-left: 10rpx;
  color: #23303a;
}

.available-credits {
  background: #fff;
  margin-left: 0;
  padding-left: 15px;
  border: none;
}

.transfer-head {
  background: #f8f8f8;
}

.upload-icon {
  position: relative;
  width: 38rpx;
  height: 38rpx;
  background: #cf4141;
  border-radius: 50%;
} 

.upload-icon-line, .upload-icon-vertical {
  position: absolute;
  width: 25rpx;
  height: 2px;
  background: #fff;
}

.upload-icon-line {
  left: 39rpx;
  top: 16rpx;
  margin-left: -30rpx;
}

.upload-icon-vertical {
  left: 39rpx;
  top: 16rpx;
  margin-left: -30rpx;
  transform: rotate(-90deg);
}

.increase-company {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 15px 0;
  font-size: 14px;
  color: #cf4141;
  background: #fff;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.increase-company-hover {
  background: #f8f8f8;
}

.increase-company .upload-icon {
  margin-right: 20rpx;
  vertical-align: middle;
}