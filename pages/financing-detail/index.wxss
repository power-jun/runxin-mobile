.article {
  padding: 1px 0;
}

.financing-status {
  display: flex;
  align-items: flex-end;
  margin: 15px;
}

.financing-status .icon {
  display: block;
  width: 10px;
  height: 10px;
  margin-bottom: 5px;
  margin-right: 8px;
  border-radius: 50%;
}

.financing-status .icon.red {
  background-color: #cf4141;
}

.financing-status .icon.green {
  background-color: #41c74a;
}

.financing-status .name {
  font-size: 16px;
  color: #23303a;
  line-height: 1.2;
}

.financing-status .tip {
  margin-left: 5px;
  font-size: 12px;
  color: #95999c;
  line-height: 1.2;
}

.master-box {
  margin-bottom: 30px;
}

.play-container {
  margin: 15px;
  border-radius: 5px;
  background-color: #fff;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  overflow: hidden;
}

.play-container .items {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 15px;
  padding: 15px 0;
  border-bottom: 1rpx solid #e5e5e5;
}

.play-container .items:last-child {
  border: 0;
}

.play-container .items .label {
  font-size: 14px;
  color: #95999c;
  line-height: 1.2;
}

.play-container .items .text {
  font-size: 14px;
  color: #95999c;
  line-height: 1.2;
}

.protocol-box {
  display: flex;
  justify-content: center;
  margin: 0 15px;
  padding-top: 25px;
}

.protocol-box .protocol {
  font-size: 14px;
  color: #2990e6;
  line-height: 1.2;
}

.warn-tip {
  padding: 10px;
  font-size: 12px;
  color: #cf4141;
  line-height: 1.2;
  text-align: center;
}

.footer {
  display: flex;
  justify-content: center;
  padding: 30px 0 50px;
}

.footer .ok {
  width: 90px;
  margin: 0 30px;
  padding: 10px 0;
  font-size: 14px;
  color: #fff;
  line-height: 1.2;
  text-align: center;
  border-radius: 3px;
  background-color: #cf4141;
}

.footer .cancel {
  width: 90px;
  margin: 0 30px;
  padding: 10px 0;
  font-size: 14px;
  color: #fff;
  line-height: 1.2;
  text-align: center;
  border-radius: 3px;
  background-color: #a1a1a1;
}
