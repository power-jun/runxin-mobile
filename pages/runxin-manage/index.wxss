.type-navbar {
  white-space: nowrap;
  height: 88rpx;
  width: 100%;
  background-color: #fff;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.type-box {
  width: 50%;
  box-sizing: content-box;
  font-size: 26rpx;
  line-height: 84rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}

.type-navbar-item {
  border-bottom: 8rpx solid #fff;
  width: 30%;
  margin: 0 auto;
}

.type-item-on {
  border-bottom: 8rpx solid #cd3a3a;
  color: #cd3a3a;
}

.holding-list {
  font-size: 20rpx;
  padding: 25rpx 15rpx;
  width:760rpx;
  box-sizing:border-box;
}

.holding-list-item {
  display: flex;
}

.percentage {
  flex: 0 0 80rpx;
  height: 160rpx;
  font-size: 22rpx;
  padding: 20rpx 15rpx;
  background: #cd3a3a;
  color: #fff;
  box-sizing: border-box;
  border-top-left-radius: 12rpx;
  border-bottom-left-radius: 12rpx;
}

.percentage text:last-child {
  margin-top:25rpx;
  display:inline-block;
}

.item-detail {
  flex:0 0 650rpx;
  box-sizing: border-box;
  padding: 40rpx 30rpx 25rpx;
  background: #fff;
  border: 1px solid #e8e8e8;
  border-top: 10rpx solid #e7a0a0;
  border-radius: 10rpx;
  margin-top: -10rpx;
  box-shadow: 1px 2px 5px #e8e8e8;
}

.number-date {
  display: flex;
  margin-bottom: 65rpx;
}

.number-date text {
  display: inline-flex;
  flex: 1;
  color: #7b8389;
  justify-content: flex-start;
}

.number-date text:last-child {
  justify-content: flex-end;
}

.money-date {
  text-align: center;
  margin-bottom: 40rpx;
}

.money-date .money {
  color: #cf4141;
  font-size: 67rpx;
}

.money-date .money text {
  font-size: 40rpx;
}

.money-date .date {
  color: #7b8389;
  margin-left: 10rpx;
}

.capital-amount {
  font-size: 27rpx;
  color: #cf4141;
  margin-bottom: 18rpx;
}

.distribute-date {
  color: #7b8389;
  margin-bottom: 10rpx;
}

.company {
  margin-bottom: 10rpx;
}

.company text {
  color: #7b8389;
  margin-right: 50rpx;
}

.guarantor {
  color: #7b8389;
  margin-top: 50rpx;
}

.guarantor text {
  margin-right: 28rpx;
}