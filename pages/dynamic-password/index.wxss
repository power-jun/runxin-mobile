.dynamic-line {
  display: flex;
  align-items: center;
  margin-left: 15px;
  padding-right: 15px;
  border-bottom: 1rpx solid #ebebeb;
}

.dynamic-line:last-child {
  border: 0;
}

.dynamic-line .head {
  font-size: 14px;
  color: #676767;
  line-height: 1.2;
}

.dynamic-line .val-input {
    flex: 1;
  padding: 15px 0;
  font-size: 14px;
  color: #676767;
  line-height: 1.2;
  text-align: right;
}

.dynamic-line .val-input .red {
  color: red;
}

.operating-step {
  margin: 0 15px;
  font-size: 14px;
  color: #676767;
}

.operating-step .head {
  font-size: 16px;
}

.operating-step view {
  margin-bottom: 20rpx;
}