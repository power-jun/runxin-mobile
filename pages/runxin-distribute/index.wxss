.article {
  padding: 1px 0;
}

.distribute-form {
  display: block;
  margin-top: 15px;
}

.distribute-line {
  display: flex;
  align-items: center;
  padding: 0 15px;
  border-bottom: 1px solid #ebebeb;
  background-color: #fff;
}

.distribute-line:nth-child(2) {
  border: 0;
}

.distribute-line:nth-child(3) {
  margin-top: 15px;
}

.distribute-line:last-child {
  border: 0;
}

.distribute-line .head {
  font-size: 14px;
  color: #676767;
  line-height: 1.2;
}

.distribute-line .val-input {
  display: flex;
  align-items: center;
  flex: 1;
}

.distribute-line .val-input input {
  flex: 1;
  padding: 15px 0;
  font-size: 14px;
  color: #676767;
  line-height: 1.2;
  text-align: right;
}

.distribute-line .val-input .available-amt {
  font-size: 20px;
  color: #e24c4c;
}

.distribute-line .unit {
  margin-left: 5px;
  font-size: 14px;
  color: #676767;
  line-height: 1.2;
}

.distribute-pictrue {
  display: flex;
  margin: 15px;
}

.distribute-pictrue .upload-img {
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
  border: 2rpx solid #ccc;
}

.distribute-pictrue .upload-tips {
  display: block;
  margin-top: 8px;
  color: #7b8389;
  font-size: 12px;
}

.protocol-box {
  display: flex;
  justify-content: center;
  margin: 0 15px;
  padding-top: 25px;
}

.protocol-box .protocol {
  font-size: 14px;
  color: #2990e6;
  line-height: 1.2;
}

.submit-btn {
  width: 300rpx;
  margin-top: 30px;
  padding: 10px 30px;
  font-size: 14px;
  color: #fff;
  line-height: 1.2;
  border-radius: 3px;
  background-color: #cf4141;
}

