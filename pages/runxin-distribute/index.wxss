.distribute-bottom-gary {
  padding: 15px 0 30px;
}

.upload-icon {
  position: relative;
}

.upload-icon-line, .upload-icon-vertical {
  position: absolute;
  width: 60rpx;
  height: 4rpx;
  background: #ccc;
}

.upload-icon-line {
  left: 60rpx;
  top: 60rpx;
  margin-left: -30rpx;
}

.upload-icon-vertical {
  left: 60rpx;
  top: 60rpx;
  margin-left: -30rpx;
  transform: rotate(-90deg);
}

.distribute-bottom-gary .distribute-line {
  height: auto;
  margin-top: 30rpx;
}
