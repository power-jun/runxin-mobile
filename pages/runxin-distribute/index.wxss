page {
  height: 100%;
}

.container {
  background-color: #f8f8f8;
  justify-content: initial;
}

.distribute-form {
  width: 100%;
  margin-top: 28rpx;
  color: #676767;
  font-size: 28rpx;
  background: #fff;
}

.distribute-line {
  display: flex;
  justify-content: space-between;
  margin:0 30rpx;
  height: 90rpx;
  align-items:center;
  border-bottom: 1px solid #ebebeb;
}

.distribute-line .head {
  display: inline-flex;
  justify-content: flex-start;
  flex: 2;
}

.distribute-line .val-input {
  display: inline-flex;
  justify-content:flex-end;
  text-align: right;
  flex: 8;
}

.distribute-line .val-input input {
  vertical-align: middle;
  width: 100%;
}

.available-amt {
  color: #e24c4c;
  font-size: 42rpx;
}

.distribute-line .unit {
  font-size: 28rpx;
  margin-top: 10rpx;
}

.distribute-line .gray {
  font-size: 26rpx;
  color: #b7b7b7;
}

.distribute-line .upload-img {
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
  border: 2rpx solid #ccc;
}

.distribute-line .upload-tips {
  display: inline-block;
  color: #7b8389;
  font-size: 20rpx;
  margin-top: 20rpx;
}

.protocol {
  text-align: center;
  margin: 50rpx 0 80rpx 0;
}

.protocol text {
  color: #2990e6;
}

.protocol input {
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  vertical-align: middle;
}

.submit-btn {
  width: 280rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  background: #cf4141;
  color: #fff;
  font-size: 28rpx;
}

.distribute-line-gray {
  width: 100%;
  height: 30rpx;
  background: #f8f8f8;
}

.distribute-bottom-gary {
  background: #f8f8f8;
  padding-bottom: 60rpx;
  padding-top: 30rpx;
}

.upload-icon {
  position: relative;
}

.upload-icon-line,
.upload-icon-vertical {
  position: absolute;
  width: 60rpx;
  height: 4rpx;
  background: #ccc;
}

.upload-icon-line {
  left: 60rpx;
  top: 60rpx;
  margin-left: -30rpx;
}

.upload-icon-vertical {
  left: 60rpx;
  top: 60rpx;
  margin-left: -30rpx;
  transform: rotate(-90deg);
}

.distribute-bottom-gary .distribute-line {
  height: auto;
  margin-top: 30rpx;
}