.check-box {
  display: flex;
  align-items: center;
}

.check-box .icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 16px;
  height: 16px;
  border-radius: 3px;
  border: 1px solid #e5e5e5;
  background-color: #fff;
  box-sizing: border-box;
  overflow: hidden;
}

.checked .icon {
  background-color: #cf4141;
}

.check-box .text {
  margin-left: 5px;
  font-size: 14px;
  color: #333;
  line-height: 1.2;
}
